---
const { id, label, value, name, placeholder = "", type = "text" } = Astro.props;
---

<div class="w-full px-4 py-2 transition border rounded-xl border-grey1">
  <label for={name} class="block text-sm font-medium text-p1">
    {label}
  </label>
  <input
    type={type}
    id={id}
    name={name}
    value={value}
    placeholder={placeholder}
    class="w-full text-lg text-white bg-transparent border-none outline-none placeholder:text-gray-500"
  />
</div>
