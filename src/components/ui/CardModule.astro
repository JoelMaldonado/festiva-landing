---
const { title, description, image } = Astro.props;
---

<div
  class="min-w-[300px] max-w-[300px] bg-gradient-to-b from-zinc-900 to-zinc-800 text-white rounded-3xl overflow-hidden snap-start shadow-xl border border-zinc-700 hover:shadow-p1/20 transition duration-300"
>
  <div class="flex flex-col gap-4 p-5">
    <h3 class="text-lg font-bold">{title}</h3>
    <p class="text-sm text-gray-300">{description}</p>
  </div>
  <div class="overflow-hidden">
    <img
      src={image}
      alt={title}
      class="object-cover w-full transition-transform duration-500 hover:scale-105"
    />
  </div>
</div>
