---
const items = [
  {
    name: "What is Festiva?",
    href: "#about",
  },
  {
    name: "Benefits",
    href: "#benefits",
  },
  {
    name: "Modules",
    href: "#modules",
  },
  {
    name: "FAQs",
    href: "#faqs",
  },
  {
    name: "Download",
    href: "#about",
  },
];
---

<div class="px-4 sm:px-6 lg:px-8 py-4">
  <header
    class="flex items-center justify-between w-full border-2 rounded-full border-grey1 bg-grey1/10 px-6 py-4 relative z-20 backdrop-blur-md"
  >
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img src="images/logo1.png" alt="Festiva logo" class="w-28 sm:w-32" />
    </a>

    <!-- Desktop nav -->
    <nav class="hidden md:flex gap-6 text-sm font-semibold text-white">
      {
        items.map((item) => (
          <a
            href={item.href}
            class="hover:text-p1 transition-colors duration-200"
          >
            {item.name}
          </a>
        ))
      }
    </nav>

    <!-- Hamburger -->
    <button
      id="menu-toggle"
      class="md:hidden text-white focus:outline-none"
      aria-label="Toggle menu"
    >
      <svg
        id="icon-open"
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <svg
        id="icon-close"
        class="w-6 h-6 hidden"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Mobile nav -->
    <nav
      id="mobile-nav"
      class="absolute top-full left-0 right-0 mt-3 bg-darkB1 border border-gray-700 rounded-xl shadow-lg py-4 px-6 text-white text-sm font-medium flex flex-col gap-4 md:hidden hidden transition-all duration-300"
    >
      {
        items.map((item) => (
          <a
            href={item.href}
            class="hover:text-p1 transition-colors duration-200"
          >
            {item.name}
          </a>
        ))
      }
    </nav>
  </header>
</div>

<!-- âœ… CLIENT-SIDE SCRIPT via type="module" -->
<script type="module">
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.getElementById("menu-toggle");
    const mobileNav = document.getElementById("mobile-nav");
    const iconOpen = document.getElementById("icon-open");
    const iconClose = document.getElementById("icon-close");

    toggle?.addEventListener("click", () => {
      mobileNav.classList.toggle("hidden");
      iconOpen.classList.toggle("hidden");
      iconClose.classList.toggle("hidden");
    });
  });
</script>
