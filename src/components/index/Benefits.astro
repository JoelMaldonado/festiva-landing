---
import CardBenefits from "../ui/CardBenefits.astro";

const businessBenefits = [
  {
    title: "Visibility",
    desc: "Boost your venue’s presence and get discovered by more users.",
    icon: "🔍",
  },
  {
    title: "Key Information",
    desc: "Share essential details like hours, location, and contact info. All in one place.",
    icon: "📄",
  },
  {
    title: "Direct Communication",
    desc: "Launch promotions and connect with your audience instantly.",
    icon: "📢",
  },
  {
    title: "Data Insights",
    desc: "Access attendance stats and trend analytics to better understand your audience.",
    icon: "📊",
    soon: true,
  },
];

const userBenefits = [
  {
    title: "Live Discovery",
    desc: "Find real-time events happening around you.",
    icon: "💡",
  },
  {
    title: "Event Details",
    desc: "Get key info for every event — artists, hours, location, and more.",
    icon: "📄",
  },
  {
    title: "Smart Navigation",
    desc: "Easily locate venues directly through the app.",
    icon: "📍",
  },
  {
    title: "Personalized Planning",
    desc: "Get curated recommendations and plan your night out with friends.",
    icon: "👥",
  },
];
---

<section
  id="benefits"
  class="bg-darkB1 py-20 relative overflow-hidden min-h-screen"
>
  <div class="px-6 mx-auto max-w-7xl">
    <h2 class="mb-12 text-4xl font-black text-white">Benefits</h2>

    <div class="grid gap-12 md:grid-cols-2">
      <!-- Negocios -->
      <div>
        <h3 class="mb-6 text-2xl font-semibold text-white">
          Festiva for Businesses
        </h3>
        <!--
        <CardBenefits
          title="Visibilidad"
          description="Haz visible tu negocio y eventos ante más usuarios."
          icon="/icons/search.svg"
          color="yellow"
        />
         -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          {
            businessBenefits.map((benefit) => (
              <div class="bg-zinc-900 rounded-2xl p-5 shadow-xl transition hover:scale-[1.02] hover:shadow-yellow-400/10 text-white relative">
                <div class="mb-2 text-3xl">{benefit.icon}</div>
                <h4 class="mb-1 text-lg font-bold">{benefit.title}</h4>
                <p class="text-sm text-gray-300">{benefit.desc}</p>
                {benefit.soon && (
                  <span class="absolute top-3 right-3 text-[10px] bg-orange-500 text-white px-2 py-0.5 rounded-full animate-pulse">
                    Soon
                  </span>
                )}
              </div>
            ))
          }
        </div>
      </div>

      <!-- Usuarios -->
      <div>
        <h3 class="mb-6 text-2xl font-semibold text-white">
          Festiva for Users
        </h3>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          {
            userBenefits.map((benefit) => (
              <div class="bg-zinc-900 rounded-2xl p-5 shadow-xl transition hover:scale-[1.02] hover:shadow-pink-500/10 text-white">
                <div class="mb-2 text-3xl">{benefit.icon}</div>
                <h4 class="mb-1 text-lg font-bold">{benefit.title}</h4>
                <p class="text-sm text-gray-300">{benefit.desc}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <img
    src="images/circle_orange_bottom.png"
    alt="circle_orange"
    class="absolute bottom-0 left-0"
  />
  <img
    src="images/circle_yellow_right.png"
    alt="circle_yellow"
    class="absolute top-2 right-0"
  />
</section>
