---
const events = [
  {
    title: "Latin Party",
    location: "Oslo, Norway",
    type: "Featured Event",
    image: "/images/club1.png",
  },
  {
    title: "Party Color",
    location: "Oslo, Norway",
    type: "Featured Event",
    image: "/images/club2.png",
  },
  {
    title: "Last Celebration",
    location: "Oslo, Norway",
    type: "Featured Event",
    image: "/images/club3.png",
  },
];
---

<section
  class="relative py-16 bg-white min-h-screen flex flex-col justify-center gap-8"
>
  <!-- Título -->
  <div class="px-4 sm:px-6 mx-auto text-center max-w-7xl z-10">
    <span
      class="inline-block px-4 py-1 mb-4 text-xs font-semibold text-white rounded-full bg-p1"
    >
      Featured
    </span>
    <h2
      class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-black leading-tight"
    >
      <span class="text-p1">Featured</span> Highlights You’ll Only Find on
      <span class="text-p1"> Festiva</span>
    </h2>
  </div>

  <div
    class="hidden md:grid grid-cols-3 gap-6 w-full h-[500px] z-10 px-4 sm:px-6"
  >
    {
      events.map((event) => (
        <div class="relative group w-full h-full overflow-hidden">
          <img
            src={event.image}
            alt={event.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          />
          <div class="absolute inset-0 bg-black/40 z-10" />
          <div class="absolute bottom-0 left-0 right-0 z-20 p-4 text-white bg-gradient-to-t from-black/70 to-transparent">
            <h3 class="text-lg font-bold">{event.title}</h3>
            <p class="text-sm">{event.location}</p>
            <p class="text-xs opacity-80">{event.type}</p>
          </div>
        </div>
      ))
    }
  </div>

  <!-- Mobile carousel (solo visible en mobile) -->
  <div
    class="md:hidden w-full overflow-x-auto flex gap-4 px-4 sm:px-6 scroll-snap-x scroll-snap-mandatory"
  >
    {
      events.map((event) => (
        <div class="min-w-[90%] shrink-0 snap-center relative group h-[400px] sm:h-[450px] rounded-xl overflow-hidden">
          <img
            src={event.image}
            alt={event.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          />
          <div class="absolute inset-0 bg-black/40 z-10" />
          <div class="absolute bottom-0 left-0 right-0 z-20 p-4 text-white bg-gradient-to-t from-black/70 to-transparent">
            <h3 class="text-lg font-bold">{event.title}</h3>
            <p class="text-sm">{event.location}</p>
            <p class="text-xs opacity-80">{event.type}</p>
          </div>
        </div>
      ))
    }
  </div>

  <!-- Círculos decorativos -->
  <img
    src="/images/circle_green_left.png"
    alt="circle_green_left"
    class="absolute z-0 left-0 bottom-8 w-24 sm:w-32 md:w-40"
  />

  <img
    src="/images/circle_orange_right.png"
    alt="circle_orange_right"
    class="absolute z-0 right-0 top-4 w-24 sm:w-32 md:w-40"
  />
</section>
