---
import Layout from "../layouts/Layout.astro";

const policies = [
  {
    title: "Data Collection",
    content:
      "We collect personal information such as your name, email address, and preferences when you interact with our app.",
  },
  {
    title: "Use of Information",
    content:
      "We use your data to enhance user experience, personalize content, and process secure transactions.",
  },
  {
    title: "Cookies",
    content:
      "This app uses cookies to analyze traffic and improve functionality. You can disable cookies in your browser settings.",
  },
  {
    title: "Data Sharing",
    content:
      "We do not sell or share your personal information with third parties without your consent, unless required by law.",
  },
  {
    title: "Your Rights",
    content:
      "You have the right to access, correct, or delete your personal information at any time.",
  },
];
---

<Layout>
  <main class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-6 text-center">Privacy Policy</h1>

    <section class="space-y-8">
      {
        policies.map((policy) => (
          <div>
            <h2 class="text-2xl font-semibold mb-2">{policy.title}</h2>
            <p class="leading-relaxed">{policy.content}</p>
          </div>
        ))
      }
    </section>

    <footer class="mt-12 text-sm text-center">
      &copy; {new Date().getFullYear()} Festiva. All rights reserved.
    </footer>
  </main>
</Layout>
